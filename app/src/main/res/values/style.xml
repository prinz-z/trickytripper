<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallFont" parent="@android:style/TextAppearance.Small" />
    <style name="MediumFont" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    <style name="LargeFont" parent="@android:style/TextAppearance.Large" />

    <style name="subTabText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    <style name="tabText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/mainDark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Copied from the material keyboard-->
    <color name="petrolLight">#ff80cbc4</color>
    <color name="petrolMain">#ff4db6ac</color>

    <color name="red">#ff0000</color>
    <color name="green">#008000</color>
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>

    <!-- Mimics ?android:attr/listDivider based on dim_foreground_dark_disabled-->
    <color name="listDividerGrey">#80bebebe</color>

    <!-- Main color deep purple-->
    <color name="main">#673ab7</color> <!-- 500 -->
    <color name="mainLight">#d1c4e9</color> <!-- 100-->
    <color name="mainDark">#4527a0</color> <!-- 800-->
    <!-- Accent: Green -->
    <color name="accent">#69f0ae</color> <!-- 200-->
    <color name="accentLight">#b9f6ca</color> <!--  100 -->
    <color name="accentDark">#00e676</color>  <!--  400 -->
    <color name="accentDarkest">#00c853</color>  <!--  700 -->

    

</resources>