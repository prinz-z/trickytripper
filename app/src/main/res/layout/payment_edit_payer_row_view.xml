<TableRow
    android:id="@+id/payment_edit_payer_row_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/payment_edit_payer_row_view_button_currency"
        android:layout_column="0"
        android:layout_width="60dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/payment_edit_payer_row_view_input_amount"
        android:layout_column="1"
        android:width="60dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/payment_edit_payer_row_view_input_weight"
        android:layout_column="2"
        android:width="60dp"
        android:inputType="numberDecimal"
        android:focusable="true"
        android:selectAllOnFocus="true"
        android:focusableInTouchMode="true">
    </EditText>

    <TextView
        android:id="@+id/payment_edit_payer_row_view_output_name"
        android:layout_column="3"
        android:gravity="start|top"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:ellipsize="middle"/>
</TableRow>